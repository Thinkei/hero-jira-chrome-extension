{
  "manifest_version": 2,
  "version": "0.0.3",
  "short_name": "Hero Jira Dev",
  "name": "Hero Jira Dev",
  "description": "Connect Github to Jira",
  "browser_action": {
    "default_title": "HeroJira",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.bundle.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["contentScript.bundle.js"]
    }
  ],
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "options_page": "options.html",
  "permissions": [
    "https://github.com/*",
    "https://*.atlassian.net/*",
    "storage"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
